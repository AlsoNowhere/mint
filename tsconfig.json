{
  "compilerOptions": {
    "module": "es2015",
    "lib": ["dom", "es2015", "es2017", "es2022"],
    "target": "es2015",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "moduleResolution": "nodenext",
    "typeRoots": ["./typings"],
    "esModuleInterop": true,
    "noEmit": false,
    "strictNullChecks": true,
    "outDir": "./dist",
    "declaration": true,
    "declarationDir": "./dist"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
